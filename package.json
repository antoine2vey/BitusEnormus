{
  "name": "mappa-bot",
  "version": "2.3.1",
  "description": "Mappa bot discord",
  "main": "src/index.js",
  "scripts": {
    "start": "tsc && node build/index.js",
    "dev": "./node_modules/nodemon/bin/nodemon.js",
    "test": "jest --forceExit",
    "test:watch": "jest --watchAll",
    "coverage": "jest --coverage --coverageReporters=text-lcov --forceExit | coveralls",
    "docker-dev": "docker-compose -f ./scripts/docker-compose.yml -f ./scripts/docker-compose.dev.yml up --build",
    "docker-prod": "docker-compose -f ./scripts/docker-compose.yml -f ./scripts/docker-compose.prod.yml up --build -d",
    "docker-ci": "docker-compose -f ./scripts/docker-compose.yml -f ./scripts/docker-compose.dev.yml build && docker-compose -f ./scripts/docker-compose.yml -f ./scripts/docker-compose.ci.yml exec bot sh -c 'npm run test'"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/cron": "^1.7.0",
    "@types/jest": "^23.3.14",
    "@types/mongoose": "^5.3.27",
    "@types/node": "^10.14.6",
    "coveralls": "^3.0.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^23.6.0",
    "nodemon": "^1.19.0",
    "prettier-eslint-cli": "^4.7.1",
    "snekfetch": "^3.6.4",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1"
  },
  "dependencies": {
    "@types/request": "^2.48.1",
    "cron": "^1.7.1",
    "discord.js": "^11.4.2",
    "discord.js-commando": "^0.10.0",
    "expect": "^22.4.3",
    "ffmpeg": "^0.0.4",
    "mongoose": "^5.5.5",
    "node-opus": "^0.3.1",
    "opusscript": "0.0.6",
    "prism-media": "0.0.3",
    "request": "^2.88.0",
    "youtube-playlist-info": "^1.1.2",
    "youtube-search": "^1.1.4",
    "ytdl-core": "^0.29.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
